<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.financiaworld.MainActivity"
    android:background="@drawable/f1" 
    >

    <Button
        android:id="@+id/btjy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/btqid"
        android:layout_alignBottom="@+id/btqid"
        android:layout_toRightOf="@+id/btqid"
        android:text="交易" />

    <Button
        android:id="@+id/btdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/btjy"
        android:layout_alignBottom="@+id/btjy"
        android:layout_toRightOf="@+id/btjy"
        android:text="地图" />

    <Button
        android:id="@+id/btph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:text="排行榜" />

    <Button
        android:id="@+id/btqid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/btph"
        android:layout_alignBottom="@+id/btph"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:text="签到" />

    <Button
        android:id="@+id/btlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btqid"
        android:layout_marginTop="49dp"
        android:text="聊天" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btlt"
        android:text="个人信息" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text="银行" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button1"
        android:text="还款" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button2"
        android:text="股权投资" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="15dp"
        android:text="理财产品" />

    <Button
        android:id="@+id/btrw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btlt"
        android:layout_below="@+id/button2"
        android:text="任务" />

</RelativeLayout>
