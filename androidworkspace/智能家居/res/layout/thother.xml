<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/linear01"
    android:background="@drawable/blue">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="socket"
        android:id="@+id/smartmain"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#FFCC00"/>
   
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/linear03"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度："
            android:id="@+id/dampe"
            android:textSize="30sp"
            android:textColor="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative02">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_____"
                android:id="@+id/damp"
                android:textSize="30sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56.2"
                android:id="@+id/Recdamp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:textColor="#FFCC00"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="度"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framela"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动"
            android:id="@+id/auto"
            android:layout_gravity="right|top"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/StartConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空调"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textSize="25sp"
        android:textColor="#FFCC00"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framela01"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关"
            android:id="@+id/fan_on_off"
            android:layout_gravity="left|top"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度+"
            android:id="@+id/fanadd"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温度-"
            android:id="@+id/fansub"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

    </FrameLayout>
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framela22"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风速高"
            android:id="@+id/gao"
            android:layout_gravity="left|top"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风速中"
            android:id="@+id/zhong"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风速低"
            android:id="@+id/di"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

    </FrameLayout>
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framela02"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="制冷"
            android:id="@+id/cold"
            android:layout_gravity="left|top"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="制热"
            android:id="@+id/warm"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="除湿"
            android:id="@+id/nowet"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ktconnect"
            android:textColor="#FFFFFF"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度设置"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textSize="25sp"
        android:textColor="#FFCC00"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framela55"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

         <EditText
        android:id="@+id/edittext2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:textSize="45px"
        android:text="22" 
        android:textColor="#FFFFFF"
        />
    
        
    </FrameLayout>
 <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext2"
        
        android:text="发送" />



</LinearLayout>

